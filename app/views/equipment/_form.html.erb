<script>
  function change_system_model(){
    var inspection_cycle_table = []
    <% @system_models.each do |s| %>
      <%= format("inspection_cycle_table.push(%d)", s.inspection_cycle_month ) %>
    <% end %>
    selected = document.getElementById("equipment_system_model_id").value
    defaule_inspection_cycle = inspection_cycle_table[selected-1]
    document.getElementById("equipment_inspection_cycle_month").value = defaule_inspection_cycle
  }
  function change_inspection_contract(){
    inspection_contract =  document.getElementById("equipment_inspection_contract").checked
    if(inspection_contract){
      document.getElementById("equipment_inspection_cycle_month").disabled = false
    }else{
      document.getElementById("equipment_inspection_cycle_month").disabled = true
    }  
  }
</script>

<%= form_for(@equipment) do |f| %>
  <% if @equipment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@equipment.errors.count, "error") %> prohibited this equipment from being saved:</h2>

      <ul>
      <% @equipment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :system_model_id %><br>
    <%= f.collection_select(:system_model_id, SystemModel.all, :id, :name, {}, {:onchange => 'change_system_model()'}) %>
  </div>
  <div class="field">
    <%= f.label :serial_number %><br>
    <%= f.text_field :serial_number %>
  </div>
  <div class="field">
    <%= f.label :inspection_contract %>
    <%= f.check_box :inspection_contract, {:onchange => 'change_inspection_contract()'} %>
  </div>
  <div class="field">
    <%= f.label :inspection_cycle_month %><br>
    <%= f.number_field :inspection_cycle_month %>
  </div>
  <div class="field">
    <%= f.label :start_date %><br>
    <%= f.date_select :start_date, {} %>
  </div>
  <div class="field">
    <%= f.label :place_id %><br>
    <%= f.collection_select(:place_id, current_user.places, :id, :name) %>
  </div>
  <div class="field">
    <%= f.label :branch_id %><br>
    <%= render_branch_select(f) %>
  </div>
  <div class="field">
    <%= f.label :service_id %><br>
    <%= f.collection_select(:service_id, current_user.services, :id, :name) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
